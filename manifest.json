{
  "manifest_version": 3,
  "name": "HN Replay App",
  "version": "0.3",
  "permissions": ["storage"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/16.png",
      "48": "icons/48.png",
      "128": "icons/128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["https://*.tradingview.com/chart/*"],
      "js": ["js/tv.js"],
      "run_at": "document_end"
    }
  ],
  "icons": {
    "16": "icons/16.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  },
  "web_accessible_resources": [
      {
          "resources": ["js/snapshot.js"],
          "matches": ["https://*.tradingview.com/*"]
      }
  ]
}